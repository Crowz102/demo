{{>header-stick}}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
    .mt-4 {
        margin-top: 8rem !important;
        width: 50rem;
    }

</style>
<div class="mt-4">
    <h3>Đăng bài viết</h3>
    <form method="POST" action="/news/store">
        <div class="form-group">
            <label for="title">Tiêu đề</label>
            <input type="text" class="form-control" id="title" name="title">
        </div>

        <div class="form-group">
            <label for="paragraph">Nội dung</label>
            <textarea type="text" class="form-control" id="paragraph" name="paragraph" rows="10"></textarea>
        </div>

        <div class="form-group">
            <label for="image">Ảnh</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Đăng bài viết</button>
    </form>
</div>

<script>
    function hidden() {
        document.getElementById("header").style.display = "none";
    }
    hidden();
</script>