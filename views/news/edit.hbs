{{>header-stick}}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
    .edit-wr{
        width: 80rem;
        padding-top: 4rem;
    }
</style>
<div class="mt-4 edit-wr">
    <h3>Sửa bài viết</h3>
    <form class="mt-4" method="POST" action="/news/{{news._id}}?_method=PUT">
        <div class="form-group">
            <label for="title" style="font-size:1.2rem;">Tiêu đề</label>
            <input type="text" class="form-control" value="{{news.title}}" id="title" name="title">
        </div>

        <div class="form-group">
            <label for="paragraph" style="font-size:1.2rem;">Nội dung</label>
            <textarea class="form-control" id="paragraph" name="paragraph" rows="5">{{news.paragraph}}</textarea>
        </div>

        <div class="form-group">
            <label for="image" style="font-size:1.2rem;">Ảnh</label>
            <input type="text" class="form-control" value="{{news.image}}" id="image" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>

<script>
    function hidden() {
        document.getElementById("header").style.display = "none";
    }
    hidden();
</script>