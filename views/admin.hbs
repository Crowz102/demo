<html>

<head>
    <style>
        .login {
            width: 20rem;
            height: 450px;
            border: 1px solid #CCC;
            background: url(https://media4.giphy.com/media/BHNfhgU63qrks/giphy.gif) center center no-repeat;
            background-size: cover;
            margin: 100px auto;
            border-radius: 20px;
        }

        .login .form {
            width: 100%;
            height: 100%;
            padding: 15px 40px;
        }

        .login .form h2 {
            color: #FFF;
            font-family: 'Roboto', sans-serif;
            font-weight: normal;
            font-size: 30px;
            text-align: center;
            margin-top: 60px;
            margin-bottom: 50px;
        }

        .login .form input {
            width: 100%;
            height: 40px;
            margin-top: 20px;
            background: rgba(255, 255, 255, .5);
            border: 1px solid rgba(255, 255, 255, .1);
            padding: 0 15px;
            color: #FFF;
            border-radius: 5px;
            font-size: 14px;
        }

        .login .form input:focus {
            border: 1px solid rgba(255, 255, 255, .8);
            outline: none;
        }

        ::-webkit-input-placeholder {
            color: #DDD;
        }

        .login .form input.submit {
            background: rgba(255, 255, 255, .9);
            color: #444;
            font-size: 15px;
            margin-top: 40px;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="login">
        <form action="admin" method="POST" class="form">
            <h2>Welcome</h2>
            <input type="text" placeholder="Username">
            <input type="password" placeholder="Password">
            <input type="submit" value="Sign In" class="submit">
        </form>
    </div>


    <script>
        function hidden() {
            document.getElementById("header").style.display = "none";
        }
        hidden();
    </script>
</body>

</html>